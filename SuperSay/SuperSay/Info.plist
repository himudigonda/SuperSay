<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Make app a background agent (no dock icon, no bouncing) -->
    <key>LSUIElement</key>
    <false/>
    
    <!-- Prevent app activation on launch -->
    <key>LSBackgroundOnly</key>
    <false/>
    
    <!-- Accessibility usage description -->
    <key>NSAppleEventsUsageDescription</key>
    <string>SuperSay needs to control other apps to adjust music volume while speaking.</string>
    
    <key>NSAccessibilityUsageDescription</key>
    <string>SuperSay needs accessibility access to read selected text from other applications.</string>
    
    <!-- Allow outgoing network connections -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsLocalNetworking</key>
        <true/>
    </dict>
    
    <!-- App doesn't require focus -->
    <key>NSSupportsAutomaticGraphicsSwitching</key>
    <true/>
</dict>
</plist>
